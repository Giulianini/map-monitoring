<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXSlider?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane id="mainBorderPopup" fx:id="mainBorderPopup" minWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox id="vboxPopup" fx:id="vboxPopup" alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
              BorderPane.alignment="CENTER">
            <children>
                <Label text="Particles Number"/>
                <JFXSlider fx:id="sliderParticles" blockIncrement="1.0" indicatorPosition="RIGHT" majorTickUnit="1.0"
                           min="1.0" max="1000" minorTickCount="0" showTickLabels="true" snapToTicks="true"
                           value="50.0"/>
                <Label text="Iteration Number (X 100)"/>
                <JFXSlider fx:id="sliderIteration" indicatorPosition="RIGHT" majorTickUnit="1.0" min="1.0" max="1000"
                           minorTickCount="0" showTickLabels="true" snapToTicks="true" value="200.0"/>
                <Label text="Time Step"/>
                <JFXSlider fx:id="sliderTimeStep" indicatorPosition="RIGHT" majorTickUnit="1.0" min="1.0"
                           minorTickCount="0" showTickLabels="true" snapToTicks="true" value="40.0"/>
            </children>
        </VBox>
    </center>
</BorderPane>
