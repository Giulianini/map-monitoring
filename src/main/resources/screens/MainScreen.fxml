<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane fx:id="mainBorder" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <top>
        <JFXToolbar id="toobar" fx:id="toolbar" BorderPane.alignment="CENTER">
            <right>
            <VBox BorderPane.alignment="CENTER" />
            </right>
            <padding>
                <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         <top>
                <HBox id="hboxGenerateParticles" alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                  <JFXButton id="buttonStartStop" fx:id="buttonStartPause" />
                        <JFXComboBox id="comboBox" fx:id="comboBoxShape" promptText="Shape" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </JFXComboBox>
                        <JFXComboBox id="comboBox" fx:id="comboBoxOptimize" promptText="Polygons">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </JFXComboBox>
                    </children>
                </HBox>
         </top>
        </JFXToolbar>
   </top>
   <center>
      <AnchorPane fx:id="canvasPane" maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0">
         <children>
            <Canvas fx:id="canvas" height="400.0" width="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
